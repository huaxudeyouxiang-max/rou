    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>给最爱的猪猪柔 ❤️</title>
    <style>
        body {
            background: linear-gradient(135deg, #ffafbd, #ffc3a0);
            font-family: 'Comic Sans MS', cursive, sans-serif;
            text-align: center;
            padding: 40px 20px;
            color: #fff;
            overflow-x: hidden;
            margin: 0;
            min-height: 100vh;
        }
        h1 {
            font-size: 2.5em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            margin-bottom: 10px;
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        .quote {
            font-size: 1.4em;
            background: rgba(255,255,255,0.2);
            padding: 25px;
            border-radius: 20px;
            margin: 30px auto;
            max-width: 90%;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            animation: glow 1.5s ease-in-out infinite alternate;
            line-height: 1.5;
        }
        @keyframes glow {
            from { box-shadow: 0 0 5px #fff; }
            to { box-shadow: 0 0 20px #ff6ec7, 0 0 30px #ff6ec7; }
        }
        button {
            background: #ff6ec7;
            color: white;
            border: none;
            padding: 16px 40px;
            font-size: 1.3em;
            border-radius: 50px;
            cursor: pointer;
            margin-top: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            transition: all 0.3s;
            font-family: inherit;
            outline: none;
        }
        button:hover {
            transform: scale(1.08) rotate(2deg);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }
        .hearts {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }
        .heart {
            position: absolute;
            color: #ff6ec7;
            font-size: 1.5em;
            animation: float 6s ease-in-out infinite;
            opacity: 0.8;
            user-select: none;
        }
        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(15deg); }
        }
        .footer {
            margin-top: 50px;
            font-size: 0.9em;
            opacity: 0.8;
        }
    </style>
